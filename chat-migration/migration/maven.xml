<?xml version="1.0" encoding="UTF-8"?>
<project
	xmlns:j="jelly:core"
	xmlns:ant="jelly:ant"
	xmlns:maven="jelly:maven"
	xmlns:u="jelly:util">

	<goal name="migrate-chat" prereqs="sakai">
		<ant:path id="chat.classpath">
			<ant:pathelement location="${basedir}/target/classes/" />
			<ant:path refid="maven.dependency.classpath"/>
		</ant:path>
		
       <java classname="org.sakaiproject.chat2.migration.ChatDataMigration" 
       		classpathref="chat.classpath"
       		fork="true">
       		<arg value="${chat.migration.debug}" />
       		<arg value="target/chat-data.sql" />
       </java>

	</goal>

</project>